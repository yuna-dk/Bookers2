<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
      <h3>name <%= @user.name %></h3>
      <h3>introduction </h3>
  
      <%= link_to edit_user_path(@user) do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
      
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Books' %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
          <% end %>
          </table>
    </div>
  </div>
</div>